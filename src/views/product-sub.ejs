<!doctype html>
<html lang="ko">
    <head>
        <%- include('../views/partials/head'); %>
        <link rel="stylesheet" href="/css/product-sub.css" />

        <script type="module" src="/js/product-sub.js"></script>
    </head>

    <body class="container">
        <header class="header">
            <%- include('../views/partials/header', {categoryName, categories}); %>
        </header>

        <main role="main" class="contents">
            <div id="productList" class="contents-inner">
                <ul class="product-list">
                    <% products.forEach(function(product) { %>
                    <li>
                        <a href="/product/detail/<%= product.id %>" class="product">
                            <div class="product-img">
                                <img src="/image/<%= product.image %>" alt="<%= product.name %>" />
                                <button type="button" class="btn btn-add-cart"></button>
                            </div>
                            <div class="product-info">
                                <p class="company"><%= product.company %></p>
                                <p class="name"><%= product.name %></p>
                                <p class="product-price">
                                    <span class="price">
                                        <%= product.price.toLocaleString() %></span
                                    >
                                    <span class="unit">Ïõê</span>
                                </p>
                            </div>
                        </a>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </main>
        <footer class="footer"><%- include('../views/partials/footer'); %></footer>
    </body>
</html>
