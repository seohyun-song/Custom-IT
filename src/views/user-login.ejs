<!doctype html>
<html lang="ko">
    <head>
        <%- include('../views/partials/head.ejs'); %>
        <link rel="stylesheet" href="/css/user-login.css" />
        <link rel="stylesheet" href="/css/layout.css" />
    </head>
    <body class="container">
        <header class="header"></header>
        <main class="contents-inner">
            <div class="login-wrap">
                <div class="header-logo">
                    <a href="http://localhost:3000/">
                        <img src="/image/customit-big-logo1.png" alt="custom-it-logo" />
                    </a>
                </div>
                <form method="post" action="/users/login" class="login-form" id="loginForm">
                    <div class="login-box">
                        <input type="text" id="email" name="email" placeholder="Email" />
                        <input
                            type="password"
                            id="password"
                            name="password"
                            placeholder="Password"
                        />
                    </div>
                    <button class="btn-login">
                        <span>LOGIN</span>
                    </button>
                    <div class="btn-join">
                        <a href="http://localhost:3000/users/join"> JOIN </a>
                    </div>
                </form>
                <a href="http://localhost:3000/admin/login" class="admin-page">
                    <p>관리자이신가요&#63; 어드민 페이지로 이동 &gt;</p>
                </a>
            </div>
        </main>
        <footer class="footer"></footer>
        <script>
            const emailCheck = /[a-z0-9]+@[a-z]+.[a-z]{2,3}/;
            const inputEmail = document.querySelector('#email');
            const inputPw = document.querySelector('#password');
            const loginForm = document.querySelector('#loginForm');

            loginForm.addEventListener('submit', btnLogin);

            async function btnLogin(e) {
                e.preventDefault();

                const email = inputEmail.value;
                const password = inputPw.value;

                const data = { email, password };

                // 이메일 비밀번호 입력이 되지 않았을 경우 입력칸 포커싱
                if (!emailCheck.test(email)) {
                    return alert('이메일 입력이 되지 않았습니다.');
                }

                if (!password) {
                    return alert('비밀번호를 입력하지 않았습니다.');
                }

                // 데이터 json 형태로 파싱
                const jsonData = JSON.stringify(data);
                const apiUrl = 'http://localhost:3000/users/login';
                const res = await fetch(apiUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: jsonData,
                });

                if (res.status === 400) {
                    alert('이메일 또는 비밀번호가 일치하지 않습니다.');
                } else {
                    return (window.location.href = 'http://localhost:3000/');
                }
            }
        </script>
    </body>
</html>
